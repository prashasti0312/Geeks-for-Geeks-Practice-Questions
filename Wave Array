class Solution{

    public static void convertToWave(int arr[], int n){
        int temp=0;
        
        for(int i=0;i<n-1;i++)
        {
            if(i%2==0)
            {
                temp=arr[i];
                arr[i]=arr[i+1];
                arr[i+1]=temp;
            }
        }
    }
    
}
